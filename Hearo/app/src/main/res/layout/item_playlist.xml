<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Playlist cover -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playlistImageCard"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/surface_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/playlistImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="12dp"
            tools:src="@drawable/ic_library"
            app:tint="@color/text_secondary"
            android:contentDescription="Playlist cover" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Playlist name -->
    <TextView
        android:id="@+id/playlistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="My Playlist"
        app:layout_constraintTop_toTopOf="@id/playlistImageCard"
        app:layout_constraintBottom_toTopOf="@id/tracksCount"
        app:layout_constraintStart_toEndOf="@id/playlistImageCard"
        app:layout_constraintEnd_toStartOf="@id/arrowIcon"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Tracks count -->
    <TextView
        android:id="@+id/tracksCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:maxLines="1"
        tools:text="12 songs"
        app:layout_constraintTop_toBottomOf="@id/playlistName"
        app:layout_constraintBottom_toBottomOf="@id/playlistImageCard"
        app:layout_constraintStart_toEndOf="@id/playlistImageCard"
        app:layout_constraintEnd_toStartOf="@id/arrowIcon" />

    <!-- Arrow icon -->
    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:rotation="180"
        app:tint="@color/text_secondary"
        android:contentDescription="Open"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


