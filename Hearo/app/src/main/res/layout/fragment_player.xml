<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:tint="@color/white"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Menu Button (три точки) -->
    <ImageView
        android:id="@+id/menuButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert"
        app:tint="@color/white"
        android:contentDescription="Menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Album Cover -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/albumCoverCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintDimensionRatio="1:1">

        <ImageView
            android:id="@+id/albumCoverImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"
            android:contentDescription="Album cover" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Track Info Container -->
    <LinearLayout
        android:id="@+id/trackInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/albumCoverCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Track Name and Artist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trackNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="You Right" />

            <TextView
                android:id="@+id/artistNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Doja Cat, The Weeknd" />

        </LinearLayout>

        <!-- Download Button -->
        <ImageView
            android:id="@+id/downloadButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_download"
            app:tint="@color/white"
            android:contentDescription="Download" />
        <!-- Добавить после downloadButton -->
        <ProgressBar
            android:id="@+id/downloadProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:progressTint="@color/purple_primary"
            app:layout_constraintTop_toBottomOf="@id/downloadButton"
            app:layout_constraintStart_toStartOf="@id/downloadButton"
            app:layout_constraintEnd_toEndOf="@id/downloadButton" />
        <!-- Favorite Button -->
        <ImageView
            android:id="@+id/favoriteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_favorite_border"
            app:tint="@color/white"
            android:contentDescription="Favorite" />

    </LinearLayout>

    <!-- Progress Bar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:progressTint="@color/purple_primary"
        android:thumbTint="@color/purple_primary"
        android:progressBackgroundTint="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/trackInfoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Time Labels -->
    <TextView
        android:id="@+id/currentTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        tools:text="1:24"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        tools:text="3:58"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/currentTimeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Shuffle Button -->
        <ImageView
            android:id="@+id/shuffleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_shuffle"
            app:tint="@color/white"
            android:contentDescription="Shuffle" />

        <!-- Previous Button -->
        <ImageView
            android:id="@+id/previousButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_skip_previous"
            app:tint="@color/white"
            android:contentDescription="Previous" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/player_gradient"
            android:src="@drawable/ic_play"
            android:scaleType="center"
            android:padding="16dp"
            android:foreground="?attr/selectableItemBackgroundBorderless" />


        <!-- Next Button -->
        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_skip_next"
            app:tint="@color/white"
            android:contentDescription="Next" />

        <!-- Repeat Button -->
        <ImageView
            android:id="@+id/repeatButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_repeat"
            app:tint="@color/white"
            android:contentDescription="Repeat" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>