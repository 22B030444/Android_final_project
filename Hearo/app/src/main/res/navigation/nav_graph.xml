<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.hearo.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.hearo.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.hearo.ui.search.SearchFragment"
        android:label="Search">
        <action
            android:id="@+id/action_searchFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_searchFragment_to_artistDetailFragment"
            app:destination="@id/artistDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.hearo.ui.library.LibraryFragment"
        android:label="Library">
        <action
            android:id="@+id/action_libraryFragment_to_likedSongsFragment"
            app:destination="@id/likedSongsFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_playlistsFragment"
            app:destination="@id/playlistsFragment" />
    </fragment>

    <fragment
        android:id="@+id/likedSongsFragment"
        android:name="com.example.hearo.ui.library.LikedSongsFragment"
        android:label="Liked Songs">
        <action
            android:id="@+id/action_likedSongsFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <fragment
        android:id="@+id/playlistsFragment"
        android:name="com.example.hearo.ui.playlist.PlaylistsFragment"
        android:label="Playlists">
        <action
            android:id="@+id/action_playlistsFragment_to_playlistDetailFragment"
            app:destination="@id/playlistDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/playlistDetailFragment"
        android:name="com.example.hearo.ui.playlist.PlaylistDetailFragment"
        android:label="Playlist">
        <action
            android:id="@+id/action_playlistDetailFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <fragment
        android:id="@+id/artistDetailFragment"
        android:name="com.example.hearo.ui.artist.ArtistDetailFragment"
        android:label="Artist">
        <action
            android:id="@+id/action_artistDetailFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.hearo.ui.history.HistoryFragment"
        android:label="History">
        <action
            android:id="@+id/action_historyFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.hearo.ui.player.PlayerFragment"
        android:label="Player" />

</navigation>