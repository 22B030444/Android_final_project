<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Login Screen -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.hearo.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Home Screen -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.hearo.ui.home.HomeFragment"
        android:label="Home" />

    <!-- Search Screen -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.hearo.ui.search.SearchFragment"
        android:label="Search" />

    <!-- Library Screen -->
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.hearo.ui.library.LibraryFragment"
        android:label="Library">
        <action
            android:id="@+id/action_libraryFragment_to_likedSongsFragment"
            app:destination="@id/likedSongsFragment" />
        <action
            android:id="@+id/action_searchFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <!-- Liked Songs Screen -->
    <fragment
        android:id="@+id/likedSongsFragment"
        android:name="com.example.hearo.ui.library.LikedSongsFragment"
        android:label="Liked Songs" />

    <!-- Player Screen -->
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.hearo.ui.player.PlayerFragment"
        android:label="Player">
        <action
            android:id="@+id/action_playerFragment_to_searchFragment"
            app:destination="@id/searchFragment"/>
        <argument
            android:name="track"
            app:argType="com.example.hearo.data.model.spotify.Track" />
    </fragment>

</navigation>


